@model IEnumerable<LGTask.Assignment.BLL.ViewModels.CategoryProperty.CategoryPropertyVm>
@{
    ViewData["Title"] = "Device Categories With Properties";
    Layout = "_Layout";
}

<h2>Devices List</h2>

<a asp-action="AddCategoryProperty" class="btn btn-primary">Add New CategoryProperty</a>


<table class="table text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category</th>
            <th>Property Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.Id</td>
                <td>@device.CategoryName</td>
                <td>@device.PropertyName</td>
                <td>

                    <a asp-action="EditCategoryProperty" asp-route-id="@device.Id" class="btn btn-outline-primary">Edit</a>
                    <form asp-action="DeleteCategoryProperty" asp-route-id="@device.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this device?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


