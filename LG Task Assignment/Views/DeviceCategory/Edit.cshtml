
@model LGTask.Assignment.BLL.ViewModels.CreateDevices.DeviceVm
@{
    ViewData["Title"] = "Edit Device";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 mt-0">
        <div class="card">
            <div class="card-header">
                <h4 class="pb-1">Edit Device</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="DeviceCategory" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row py-3">
                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="DeviceName" class="form-label fw-semibold">Device Name</label>
                                <input asp-for="DeviceName" class="form-control" />
                                <span asp-validation-for="DeviceName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                                    <option value="" disabled selected>Choose Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="PropertyId" class="form-label fw-semibold">Property</label>
                                <select asp-for="PropertyId" asp-items="@ViewBag.Properties" class="form-control">
                                    <option value="" disabled selected>Choose Property</option>
                                </select>
                                <span asp-validation-for="PropertyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label for="PropertyValue" class="form-label fw-semibold">Property Value</label>
                                <div id="propertyValueContainer">
                                    <input type="text" name="PropertyValue" value="@Model.PropertyValue" class="form-control" />
                                </div>
                                <span class="text-danger field-validation-valid" data-valmsg-for="PropertyValue" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="SerialNo" class="form-label fw-semibold">Serial Number</label>
                                <input asp-for="SerialNo" class="form-control" />
                                <span asp-validation-for="SerialNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="AcquisitionDate" class="form-label fw-semibold">Acquisition Date</label>
                                <input asp-for="AcquisitionDate" type="date" class="form-control" />
                                <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="d-flex justify-content-center align-items-center mb-3 flex-wrap gap-3 mt-4 fw-semibold fs-5">
                            <button type="submit" class="btn btn-success ">
                                Save
                                <span class="ms-2 fw-semibold">
                                    <i class="mdi mdi-check"></i>
                                </span>
                            </button>
                            <a href="@Url.Action("Index", "DeviceCategory")" class="btn btn-outline-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('select[data-toggle="select2"]').select2();

            $('#PropertyId').on('change', function () {
                var propertyId = $(this).val();
                var container = $('#propertyValueContainer');
                container.empty();
                if (propertyId) {
                    $.ajax({
                        url: '/DeviceCategory/GetPropertyDetails',
                        type: 'GET',
                        data: { propertyId: propertyId },
                        success: function (property) {
                            if (!property) {
                                container.append('<input type="text" name="PropertyValue" class="form-control" value="@Model.PropertyValue" />');
                                return;
                            }
                            var inputHtml = '';
                            if (property.propertyName.toLowerCase().includes('touchscreen') ||
                                property.propertyName.toLowerCase().includes('boolean')) {
                                inputHtml = `<select name="PropertyValue" class="form-control">
                                    <option value="">Select</option>
                                    <option value="true" ${'@Model.PropertyValue' === 'true' ? 'selected' : ''}>True</option>
                                    <option value="false" ${'@Model.PropertyValue' === 'false' ? 'selected' : ''}>False</option>
                                </select>`;
                            } else if (property.propertyName.toLowerCase().includes('user') ||
                                       property.propertyName.toLowerCase().includes('owner')) {
                                inputHtml = `<input type="text" name="PropertyValue" class="form-control" placeholder="Enter user name" value="@Model.PropertyValue" />`;
                            } else {
                                inputHtml = `<input type="text" name="PropertyValue" class="form-control" value="@Model.PropertyValue" />`;
                            }
                            container.append(inputHtml);
                        },
                        error: function () {
                            container.append('<input type="text" name="PropertyValue" class="form-control" value="@Model.PropertyValue" />');
                        }
                    });
                } else {
                    container.append('<input type="text" name="PropertyValue" class="form-control" value="@Model.PropertyValue" />');
                }
            });

            $('#PropertyId').trigger('change');
        });
    </script>
}