@model LGTask.Assignment.BLL.ViewModels.PropertyItems.PropertyItemVm

@{
    ViewData["Title"] = "Edit Property";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 mt-0">
        <div class="card">
            <div class="card-header">
                <h4>Edit Property</h4>
            </div>
            <div class="card-body">
                <form asp-action="EditProperty" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="PropertyDescription" class="form-label fw-semibold"></label>
                        <input asp-for="PropertyDescription" class="form-control" />
                        <span asp-validation-for="PropertyDescription" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <a asp-action="GetAllProperties" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
