@using LGTask.Assignment.BLL.ViewModels.CreateDevices
@model LGTask.Assignment.BLL.ViewModels.CreateDevices.DeviceVm
@{
    ViewData["Title"] = "Create Device";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 mt-0">
        <div class="card">
            <div class="card-header">
                <h4 class="pb-1">Add Device</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="DeviceCategory" method="post" id="mainDeviceForm">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row py-3">
                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                                <div class="d-flex align-items-center gap-2">
                                    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control" id="CategoryId">
                                        <option value="">Choose Category</option>
                                    </select>
                                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addCategoryModal" title="Add New Category">
                                        <i class="mdi mdi-plus">+</i>
                                    </button>
                                </div>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="DeviceName" class="form-label fw-semibold">Device Name</label>
                                <input asp-for="DeviceName" class="form-control" />
                                <span asp-validation-for="DeviceName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="PropertyId" class="form-label fw-semibold">Property</label>
                                <select asp-for="PropertyId" asp-items="@ViewBag.Properties" class="form-control" id="PropertyId">
                                    <option value="">Choose Property</option>
                                </select>
                                <span asp-validation-for="PropertyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label for="PropertyValue" class="form-label fw-semibold">Property Values</label>
                                <div id="propertyValueContainer">
                                    <input class="form-control"  asp-for="PropertyValue" placeholder="Enter properties as key=value (e.g., Processor=Core I7)"/>
                                </div>
                                <span class="text-danger field-validation-valid" data-valmsg-for="PropertyValue" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="SerialNo" class="form-label fw-semibold">Serial Number</label>
                                <input asp-for="SerialNo" class="form-control" />
                                <span asp-validation-for="SerialNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="AcquisitionDate" class="form-label fw-semibold">Acquisition Date</label>
                                <input asp-for="AcquisitionDate" type="date" class="form-control" />
                                <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center align-items-center mb-3 flex-wrap gap-3 mt-4 fw-semibold fs-5">
                            <button type="submit" class="btn btn-primary btn-sm fs-5">
                                Save
                                <span class="ms-2 fw-semibold">
                                    <i class="mdi mdi-check"></i>
                                </span>
                            </button>
                            <a href="@Url.Action("Index", "DeviceCategory")" class="btn btn-outline-primary btn-sm fs-5">Cancel</a>
                        </div>
                    </div>
                </form>

                <!-- Bootstrap 5 Modal for Adding Category -->
                <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="addCategoryForm" asp-action="CreateCategory" asp-controller="DeviceCategory" method="post">
                                    <div id="modalValidationSummary" class="text-danger"></div>
                                    <div class="mb-3">
                                        <label for="CategoryName" class="form-label fw-semibold">Category Name</label>
                                        <input id="CategoryName" name="CategoryName" class="form-control" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="CategoryName" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="submit" class="btn btn-primary btn-sm">Save</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('select[data-toggle="select2"]').select2();

            $('#PropertyId').on('change', function () {
                var propertyId = $(this).val();
                var container = $('#propertyValueContainer');
                container.empty();
                if (propertyId) {
                    $.ajax({
                        url: '/DeviceCategory/GetPropertyDetails',
                        type: 'GET',
                        data: { propertyId: propertyId },
                        success: function (property) {
                            if (!property) {
                                container.append('<textarea class="form-control" rows="3" name="PropertyValue" placeholder="Enter properties as key=value (e.g., Processor=Core I7)"></textarea>');
                                return;
                            }
                            var placeholder = 'Enter properties as key=value';
                            var propertyNameLower = property.propertyName.toLowerCase();
                            if (propertyNameLower.includes('touchscreen') || propertyNameLower.includes('boolean')) {
                                placeholder = 'Enter as Touchscreen=true or Touchscreen=false';
                            } else if (propertyNameLower.includes('user') || propertyNameLower.includes('owner')) {
                                placeholder = 'Enter as Current User=Mohamed Mohsen';
                            } else if (propertyNameLower.includes('ip') || propertyNameLower.includes('address')) {
                                placeholder = 'Enter as IP Address=192.168.1.5';
                            } else if (propertyNameLower.includes('processor') || propertyNameLower.includes('core')) {
                                placeholder = 'Enter as Processor=Core I7';
                            } else {
                                placeholder = `Enter as ${property.propertyName}=Value`;
                            }
                            var textareaHtml = `<textarea class="form-control" rows="3" name="PropertyValue" placeholder="${placeholder}"></textarea>`;
                            container.append(textareaHtml);
                        },
                        error: function () {
                            container.append('<textarea class="form-control" rows="3" name="PropertyValue" placeholder="Enter properties as key=value (e.g., Property=Value)"></textarea>');
                        }
                    });
                } else {
                    container.append('<textarea class="form-control" rows="3" name="PropertyValue" placeholder="Select a property first..."></textarea>');
                }
            });

            $('#PropertyId').trigger('change');

            $('#addCategoryForm').validate({
                rules: {
                    CategoryName: {
                        required: true,
                        minlength: 2
                    }
                },
                messages: {
                    CategoryName: {
                        required: "Category name is required.",
                        minlength: "Category name must be at least 2 characters."
                    }
                },
                errorPlacement: function (error, element) {
                    element.next('.text-danger').html(error);
                }
            });

            $('#addCategoryForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);

                if (!form.valid()) {
                    return;
                }

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    beforeSend: function () {
                        form.find('button[type="submit"]').prop('disabled', true).prepend('<span class="spinner-border spinner-border-sm me-2"></span>');
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#CategoryId').append(`<option value="${response.id}">${response.name}</option>`);
                            $('#CategoryId').val(response.id).trigger('change');
                            $('#addCategoryModal').modal('hide');
                            form[0].reset();
                            $('#modalValidationSummary').empty();
                            form.find('.text-danger').empty();
                        } else {
                            $('#modalValidationSummary').html(`<div class="alert alert-danger">${response.error || 'Failed to add category.'}</div>`);
                        }
                    },
                    error: function () {
                        $('#modalValidationSummary').html('<div class="alert alert-danger">An error occurred. Please try again.</div>');
                    },
                    complete: function () {
                        form.find('button[type="submit"]').prop('disabled', false).find('.spinner-border').remove();
                    }
                });
            });

            $('#addCategoryModal').on('hidden.bs.modal', function () {
                $('#addCategoryForm')[0].reset();
                $('#modalValidationSummary').empty();
                $('#addCategoryForm .text-danger').empty();
            });
        });
    </script>
}