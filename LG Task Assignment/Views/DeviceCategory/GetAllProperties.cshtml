@model IEnumerable<LGTask.Assignment.BLL.ViewModels.PropertyItems.PropertyItemVm>
@{
    ViewData["Title"] = "Properties";
    Layout = "_Layout";
}

<h2>Property Items List</h2>

<a asp-action="CreateProperty" class="btn btn-primary">Add New Property</a>


<table class="table text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Property Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.Id</td>
                <td>@device.PropertyDescription</td>
                <td>

                    <a asp-action="EditProperty" asp-route-id="@device.Id" class="btn btn-outline-primary">Edit</a>
                    <form asp-action="DeleteProperty" asp-route-id="@device.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this device?');">
                        <button type="submit" class="btn  btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


