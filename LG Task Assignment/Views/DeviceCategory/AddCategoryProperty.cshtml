@using LGTask.Assignment.BLL.ViewModels.CategoryProperty
@model CategoryPropertyVm
@{
    ViewData["Title"] = "Add Category Property";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 mt-0">
        <div class="card">
            <div class="card-header">
                <h4 class="pb-1">Add Category Property</h4>
            </div>
            <div class="card-body">
                <form id="addCategoryPropertyForm" asp-action="AddCategoryProperty" asp-controller="DeviceCategory" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" id="validationSummary"></div>
                    <div class="row py-3">
                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control" id="CategoryId">
                                    <option value="">Choose Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2">
                                <label asp-for="PropertyId" class="form-label fw-semibold">Property</label>
                                <select asp-for="PropertyId" asp-items="@ViewBag.Properties" class="form-control" id="PropertyId">
                                    <option value="">Choose Property</option>
                                </select>
                                <span asp-validation-for="PropertyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="mb-2 d-flex align-items-end h-100">
                                <button type="submit" class="btn btn-outline-success btn-sm fs-5">
                                    Save
                                    <span class="ms-2 fw-semibold">
                                        <i class="mdi mdi-check"></i>
                                    </span>
                                </button>
                                <a href="@Url.Action("Index", "DeviceCategory")" class="btn btn-danger btn-sm fs-5 ms-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Display Existing Category Properties -->
                <div class="mt-4">
                    <h5>Existing Category Properties</h5>
                    <select id="categoryPropertiesList" class="form-control">
                        @if (ViewBag.CategoryProperties != null)
                        {
                            foreach (var cp in (List<CategoryPropertyVm>)ViewBag.CategoryProperties)
                            {
                                <option value="@cp.Id">@cp.CategoryName - @cp.PropertyName</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-4 col-12">
                    <a href="@Url.Action("GetAllCategoryProperties", "DeviceCategory")" class="btn btn-outline-primary btn-sm fs-5 mt-2">Show All</a>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('select[data-toggle="select2"]').select2({
                width: '100%'
            });

            // Form validation and submission
            $('#addCategoryPropertyForm').validate({
                rules: {
                    CategoryId: {
                        required: true,
                        min: 1
                    },
                    PropertyId: {
                        required: true,
                        min: 1
                    }
                },
                messages: {
                    CategoryId: {
                        required: "Please select a category.",
                        min: "Please select a valid category."
                    },
                    PropertyId: {
                        required: "Please select a property.",
                        min: "Please select a valid property."
                    }
                },
                errorPlacement: function (error, element) {
                    element.next('.text-danger').html(error);
                }
            });

            $('#addCategoryPropertyForm').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                if (!form.valid()) {
                    return;
                }
                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    beforeSend: function () {
                        form.find('button[type="submit"]').prop('disabled', true).prepend('<span class="spinner-border spinner-border-sm me-2"></span>');
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#categoryPropertiesList').append(`<option value="${response.id}">${response.name}</option>`);
                            $('#categoryPropertiesList').val(response.id).trigger('change');
                            form[0].reset();
                            $('#CategoryId, #PropertyId').val('').trigger('change.select2');
                            $('#validationSummary').empty();
                            form.find('.text-danger').empty();
                            // Show success toast
                            $('body').append('<div class="alert alert-success alert-dismissible fade show position-fixed bottom-0 end-0 m-3" role="alert">Category property added successfully!<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                            setTimeout(() => $('.alert-success').alert('close'), 3000);
                        } else {
                            $('#validationSummary').html(`<div class="alert alert-danger">${response.error || 'Failed to add category property.'}</div>`);
                        }
                    },
                    error: function () {
                        $('#validationSummary').html('<div class="alert alert-danger">An error occurred. Please try again.</div>');
                    },
                    complete: function () {
                        form.find('button[type="submit"]').prop('disabled', false).find('.spinner-border').remove();
                    }
                });
            });
        });
    </script>
}